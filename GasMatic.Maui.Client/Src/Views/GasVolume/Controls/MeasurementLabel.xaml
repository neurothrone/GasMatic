<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasMatic.Maui.Client.Views.GasVolume.Controls.MeasurementLabel"
             x:Name="This">

    <Label BindingContext="{x:Reference This}"
           FontSize="20">
        <Label.FormattedText>
            <FormattedString>
                <Span Text="{Binding MeasurementType}"
                      TextColor="Silver"
                      FontAttributes="Bold" />
                <Span Text=" ("
                      TextColor="Silver"
                      FontAttributes="Bold" />
                <Span Text="{Binding Unit}"
                      TextColor="MediumPurple"
                      FontAttributes="Bold" />
                <Span Text=")"
                      TextColor="Silver"
                      FontAttributes="Bold" />
            </FormattedString>
        </Label.FormattedText>
    </Label>

</ContentView>