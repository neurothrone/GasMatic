<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GasMatic.Client.Core.ViewModels;assembly=GasMatic.Client.Core"
             x:Class="GasMatic.Mobile.Views.Settings.Controls.UnselectedLanguageItemView"
             x:DataType="viewModels:LanguageItemViewModel">

    <Border Stroke="MediumSlateBlue"
            BackgroundColor="SlateBlue"
            Padding="10,15">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="0" />
        </Border.StrokeShape>

        <Label Text="{Binding Language}"
               TextColor="White"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center" />

        <Border.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding 
                Source={RelativeSource AncestorType={x:Type viewModels:SettingsViewModel}},
                Path=ChangeLanguageCommand}"
                CommandParameter="{Binding Language}" />
        </Border.GestureRecognizers>
    </Border>
</ContentView>